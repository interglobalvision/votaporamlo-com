.color-red
  color: $color-red

.button-holder
  position: fixed
  top: 300px
  &#si
    left: calc('50vw - 105px')
    z-index: 300
  &#no
    left: calc('50vw + 5px')
    z-index: 100

button
  background: $color-red
  padding: $margin-small 0
  width: 100px
  border: none
  appearance: none
  color: $color-white
  font-family: $font-surface

#si button
  cursor: pointer
  &:focus
    outline-color: $color-red

#no button:focus
  outline: none

#vota
  position: fixed
  left: calc('50vw - 155px')
  top: 230px
  z-index: 400
  pointer-events: none
  opacity: 0
  transition: opacity 500ms linear
  display: none
  &.show
    opacity: 1

#compartir
  opacity: 0
  pointer-events: none
  transition: opacity 500ms linear
  &.show
    opacity: 1
    pointer-events: auto
  img
    width: 100px

#marquee
  background: $color-red
  color: $color-white
  font-family: $font-globie

footer#footer
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  font-family: $font-globie
  pointer-events: none
  a
    pointer-events: auto

#globie
  height: 36px

audio
  width: 100px
  height: 20px
  position: absolute
  left: 0
  top: 0

#amlo
  width: 375px
  height: 500px
  background-image: url('/img/dist/animation.png')
  background-position: 0px 0
  background-size: 800% 100%
  background-repeat: no-repeat
  position: absolute
  top: 200px
  right: 0
  opacity: 0
  transition: opacity 200ms linear
  z-index: -1
  &.animate
    opacity: 1
    animation: face 1000ms steps(7)
    animation-fill-mode: forwards

@keyframes face
  100%
    background-position: -2625px 0
